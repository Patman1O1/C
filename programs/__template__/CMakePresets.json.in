{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "@PROGRAM_NAME@",
      "displayName": "@PROGRAM_NAME@",
      "description": "Default preset",
      "generator": "Unix Makefiles",
      "vendor": {
          "jetbrains.com/clion": {
            "toolchain": "WSL"
          }
      },
      "binaryDir": "@PROGRAM_SOURCE_DIR@",
      "hidden": false,
      "cacheVariables": {
        "@LIBRARY_NAME_UPPER@_BUILD_TESTS": "ON",
        "@LIBRARY_NAME_UPPER@_BUILD_EXAMPLES": "ON",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_C_STANDARD": "@CMAKE_CXX_STANDARD@",
        "CMAKE_C_STANDARD_REQUIRED": "ON",
        "CMAKE_BUILD_TYPE": "Default",
        "CMAKE_MINIMUM_REQUIRED_VERSION": "@CMAKE_MINIMUM_REQUIRED_VERSION@"
      }
    }

  ],
  "buildPresets": [
    {
        "name": "default",
        "configurePreset": "@LIBRARY_NAME@",
        "configuration": "Default",
        "targets": ["all"]
    }

  ]
}
